      <Button fx:id="signUpButton" onAction="#startSignUp" layoutX="318.0" layoutY="411.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="164.0" style="-fx-background-color: #2196f3;" text="Зарегестрироваться" textFill="WHITE">
