      <TextField fx:id="emailText" layoutX="276.0" layoutY="263.0" prefHeight="39.0" prefWidth="255.0" promptText="Введите почту" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: #a0a2ab; -fx-text-fill: #a0a2ab;">
